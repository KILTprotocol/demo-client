/*******************************
        Theme Selection
*******************************/

/* To override a theme for an individual element
   specify theme name below
*/

/* Global */
@site        : 'kilt';
@reset       : 'kilt';

/* Elements */
@button      : 'kilt';
@container   : 'kilt';
@divider     : 'kilt';
@flag        : 'kilt';
@header      : 'kilt';
@icon        : 'kilt';
@image       : 'kilt';
@input       : 'kilt';
@label       : 'kilt';
@list        : 'kilt';
@loader      : 'kilt';
@placeholder : 'kilt';
@rail        : 'kilt';
@reveal      : 'kilt';
@segment     : 'kilt';
@step        : 'kilt';

/* Collections */
@breadcrumb  : 'kilt';
@form        : 'kilt';
@grid        : 'kilt';
@menu        : 'kilt';
@message     : 'kilt';
@table       : 'kilt';

/* Modules */
@accordion   : 'kilt';
@checkbox    : 'kilt';
@dimmer      : 'kilt';
@dropdown    : 'kilt';
@embed       : 'kilt';
@modal       : 'kilt';
@nag         : 'kilt';
@popup       : 'kilt';
@progress    : 'kilt';
@rating      : 'kilt';
@search      : 'kilt';
@shape       : 'kilt';
@sidebar     : 'kilt';
@sticky      : 'kilt';
@tab         : 'kilt';
@transition  : 'kilt';

/* Views */
@ad          : 'kilt';
@card        : 'kilt';
@comment     : 'kilt';
@feed        : 'kilt';
@item        : 'kilt';
@statistic   : 'kilt';

/*******************************
            Folders
*******************************/

/* Path to theme packages */
@themesFolder : 'themes';

/* Path to site override folder */
@siteFolder  : 'site';


/*******************************
         Import Theme
*******************************/

@import (multiple) "theme.less";

/* End Config */
